#!/usr/bin/env bash

# Check out submodules. The --git-dir option doesn't work here.
cd "${HOME}/dotfiles"
git submodule --quiet update --init
cd "${OLDPWD}"

# Link in files, replacing whatever's already there.
ln -fs "dotfiles/bash/bashrc"       "${HOME}/.bashrc"
ln -fs "dotfiles/git/gitconfig"     "${HOME}/.gitconfig"
ln -fs "dotfiles/git/gitignore_global"     "${HOME}/.gitignore_global"
ln -fs "dotfiles/vim/vimrc"         "${HOME}/.vimrc"
ln -fs "dotfiles/X/Xdefaults"         "${HOME}/.Xdefaults"
ln -fs "dotfiles/X/xmodmap"         "${HOME}/.xmodmap"

# Link in directories, removing whatever's already there first.
if [ -e "${HOME}/.vim" ]; then
    rm -r "${HOME}/.vim"
fi
ln -fs "dotfiles/vim" "${HOME}/.vim"
